{{> atoms/iconography/svgicons-search }}

{{> organisms/global/header}}

<div role="main" class="page l-page">

<section class="search-hero">
		<div class="searchbar">
		<form action="{{form_action_search}}" class="search-multiterm">
			<div class="inputarea">
			{{#input_search}}
				<input type="text" data-role="tagsinput" 
				{{#title}}title="{{title}}" {{/title}}
				{{#input_name}}name="{{input_name}}" {{/input_name}}
				{{#input_value}}value="{{input_value}}" {{/input_value}}
				{{#placeholder}}placeholder="{{placeholder}}" {{/placeholder}}
				/>
			{{/input_search}}
			</div>
			<div class="submitarea">
				<button type="submit" class="search-submit">
				<svg class="icon icon-search">
					<use xlink:href="#icon-search"></use>
				</svg>
				<span class="is-vishidden">Search</span>
			</button>
			</div>
		</form>
		</div>
</section>

<section class="search-results">
<div class="container">


	<div class="results-list">


		<!-- Start of results header - sort controls, actions etc. -->
		<div class="results-header">
			<div class="action-select">
				<input type="checkbox" name="allselected" id="action_select_all">
			</div>

			<div class="result-actions">
			{{# menus.actions }}
				{{> molecules/controls/dropdown-menu }}
			{{/ menus.actions }}
			</div>

			<div class="result-info">
				1640 results for <strong>Rembrandt</strong> and <strong>Art History</strong>
			</div>

			<div class="result-controls">

				{{! List and grid view buttons }}
				{{> molecules/controls/buttonbar-viewtype }}

				<div class="result-sort">

				{{# menus.sort }}
					{{> molecules/controls/dropdown-menu }}
				{{/ menus.sort }}

				</div>

			</div>

		</div>
		<!-- End of results header -->

		<ol>
		{{# searchresults }}
			<li>
		    {{> molecules/components/search/search-listitem }}
		    </li>
		{{/ searchresults }}
		</ol>
	</div>


	<div class="refine">

		<h2>Refine your search</h2>

		{{#filters}}
		    {{#simple}}
		        {{> molecules/controls/filter-simple }}
		    {{/simple}}

		    {{#date}}
		        {{> molecules/controls/filter-date }}
		    {{/date}}

		    {{#language}}
		        {{> molecules/controls/filter-language }}
		    {{/language}}

		    {{#license}}
		        {{> molecules/controls/filter-license }}
		    {{/license}}
		{{/filters}}


		<a href="#refine-advanced">More refinementsâ€¦</a>

		<div class="refine-advanced">
			@TODO add advanced search
		</div>

	</div>

</div>
</section>

</div>


{{> organisms/global/footer }}

