<div class="filter {{styleModifier}}">

	<div class="filter-name">{{ title }}</div>

	<ul class="filter-list">
	{{#items}}
		<li>
			<a href="{{url}}">{{text}}
			{{#num_results}}
			<span class="filter-num">({{num_results}})</span>
			{{/num_results}}
			</a>
		</li>
	{{/items}}

	{{#extra_items_exist}}
		<div class="js-extrafields is-jshidden">
	{{/extra_items_exist}}

	{{#extra_items}}
		<li>
			<a href="{{url}}">{{text}}
			{{#num_results}}
			<span class="filter-num">{{num_results}}</span>
			{{/num_results}}
			</a>
		</li>
	{{/extra_items}}

	{{#extra_items_exist}}
	</div>
	{{/extra_items_exist}}

	</ul>

