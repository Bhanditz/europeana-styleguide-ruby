            <h4>{{intro.title}}</h4>
            <p>{{intro.description}}</p>
          </div>
        </div>
        <div class="gridlayout width-fluid">
          {{#items}}
            <div class="gridlayout-card">
              <a class="card-img" href="{{url}}" style="background-image:url('{{img_url}}');"></a>
