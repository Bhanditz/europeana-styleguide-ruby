<style>

.ve-slide-container {
  height:   100%;
  overflow: hidden;
  position: relative;
}

.ve-slide{
  poistion: relative;
}

.ve-slide.hide-above{
  top:      -100%;
  position: absolute;
}
.ve-slide.hide-below{
  top:      100%;
  position: absolute;
}
.ve-slide.animating{
  transition: margin-top 1s;
  transition: margin-bottom 1s;
  webkit-transition: margin-top 1s;
  webkit-transition: margin-bottom 1s;
}





.ve-slide-container .slide-nav{
  color:             #fff;
  cursor:            pointer;
  font-size:         2em;
  font-weight:       bold;
  position:          absolute;
  left:              50%;

  text-shadow:       0 0 1px #000;

  transform:         translateX(-50%);
}

.ve-slide-container .slide-nav-next{
  bottom: 0.5em;
}

.ve-slide-container .slide-nav-prev{
  top: 0.5em;
}



</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
