{{> atoms/iconography/svgicons-search }}
{{> atoms/iconography/svgicons-editing }}
{{> atoms/iconography/svgicons-user }}

{{> organisms/global/header_v2}}



<main role="main" class="l-page">
<div class="lc">

  <div class="l-content">

    <div class="page_header">
      {{> molecules/navigation/breadcrumbs}}
    </div>




    <div class="account-header section">
      <h2>Current Competition: <span class="highlight">Heritage in Motion 2016</span></h2>
      <p>Deadline: Submit your entries before January 12th 2016</p>
      <a href="TODO: add new submission url" class="btn cta">Add a new Entry</a>
    </div>

    <div class="section">

    <h2>Your Entries</h2>

      <ul class="cf">
        {{#listItems.four}}
        <li class="submission-list-item list-item cf">

          <h3><span class="inabox">2016</span> Submission 01</h3>

          <div class="cf">
            <div class="item-supplementary">
              <div class="item-image">
                <a href="{{ VIEW URL HERE }}"><img src="{{ image_root }}{{ img.rectangle.src }}" alt="{{ img.rectangle.alt }}" /></a>
              </div>
            </div>

            <div class="item-details">
              <h4>{{ title }}</h4>
              <div class="description">
                {{ description }}
              </div>
            </div>
          </div>

          <div class="submission-meta cf">



            {{#states.one}}
            <span class="submission-status btn pill pending">Pending approval</span>
            {{/states.one}}
            {{^states.one}}
            <span class="submission-status btn pill approved">
                <svg class="icon icon-check">
                  <use xlink:href="#icon-check"></use>
                </svg>
                Approved
            </span>
            {{/states.one}}
            {{#states.three}}
            <span class="submission-status btn pill rejected">
                <svg class="icon icon-delete">
                  <use xlink:href="#icon-delete"></use>
                </svg>
                Rejected
            </span>
            {{/states.three}}


            {{#states.two}}
            <span class="submission-status btn pill approved">
                <svg class="icon icon-check">
                  <use xlink:href="#icon-check"></use>
                </svg>
                Paid
            </span>
            {{/states.two}}
            {{^states.two}}
            <button class="submission-status btn pill action">Pay now</button>
            {{/states.two}}



            <div class="submission-actions">
              <ul class="button-bar button-bar-small">
                <li class="button-bar__item">
                  <a href="TODO: edit url here" class="button-bar__button">
                    <svg class="icon icon-edit">
                      <use xlink:href="#icon-edit"></use>
                    </svg>
                    Edit
                  </a>
                </li>
                <li class="button-bar__item">
                  <a href="TODO: view url here" class="button-bar__button">
                    <svg class="icon icon-view">
                      <use xlink:href="#icon-view"></use>
                    </svg>
                    View
                  </a>
                </li>
              </ul>
            </div>
          </div>

        </li>
        {{/listItems.four}}
      </ul>
    </div>


  </div>
  {{! END l-content }}


  <div class="l-sidebar">

    <div class="section">
        <nav class="nav_secondary" role="navigation">
          <ul class="level1">
            <li>
              <a href="#" class="is-current">Entries</a>
            </li>
            <li>
              <a href="#">Profile</a>
            </li>
          </ul>
        </nav>
    </div>

  </div>
  {{! end sidebar }}

</div>
</main>
<!-- End Main -->


