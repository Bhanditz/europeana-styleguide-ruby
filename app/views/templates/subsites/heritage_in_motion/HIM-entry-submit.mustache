{{> atoms/iconography/svgicons-user }}


{{> organisms/global/header_v2}}



<main role="main" class="l-page">
<div class="lc">

  <div class="l-content">

    <div class="page_header">
      {{> molecules/navigation/breadcrumbs}}
    </div>

    <div id="entry-detail" class="entry-detail">

      <div class="section">

        <h2><span class="inabox">Heritage in Motion 2016</span> â€º Your New Project</h2>

        <div class="entry-upload entry-primary-upload">
          <form action="/file-upload">
            <div class="inner centre">

              <label for="heritagenew_videolink" class="required"><h3>Add the link to your entry.</h3> (enter a youTube, Vimeo, Slideshare or flickr link)</label>

              <input type="text" id="heritagenew_videolink" name="heritagenew[videolink]" required="required" placeholder="https://youtu.be/dQw4w9WgXcQ">

            </div>
          </form>
        </div>




        {{! new }}

        <div class="cf entry-info">
          <!-- Entry meta data -->
          <div class="entry-data">

            <div class="entry-upload entry-secondary-upload">
              <form action="/file-upload" class="dropzone">
                <div class="inner centre">

                  <h3>Add a thumbnail image</h3>
                  <input name="upload-placeholder" type="file" />

                </div>
              </form>
            </div>

            <div class="entry-data-inner">
              <ul>
                <li>
                  <label for="heritagenew_credits" class="required"><span class="h4 cf">About the Production</span> (year, production team, etc.)</label>
                  <textarea id="heritagenew_credits" name="heritagenew[credits]" required="required" placeholder="(500 words max)" rows="5"></textarea>
                </li>

                <li>
                  <label for="heritagenew_projecturl">Web address</label>
                  <input type="text" id="heritagenew_projecturl" name="heritagenew[projecturl]">
                </li>
              </ul>
            </div>

          </div>

          <div class="entry-text prose">

            <div class="field-container">
              <label for="heritagenew_title" class="required">Entry title:</label>
              <input type="text" id="heritagenew_title" name="heritagenew[title]" required="required" placeholder="Your entry title here">
            </div>

            <div class="field-container">
              <label for="heritagenew_summary" class="required">Summary with tagline</label>
              <textarea id="heritagenew_summary" name="heritagenew[summary]" required="required" placeholder="(250 words max)" rows="6"></textarea>
            </div>

            <div class="field-container">
            <h4>Which categories are you entering?</h4>
            <ul class="inline-list">
              <li><label><input type="checkbox" name="heritagenew[category][]" value="app"> App</label></li>
              <li><label><input type="checkbox" name="heritagenew[category][]" value="website"> Website</label></li>
              <li><label><input type="checkbox" name="heritagenew[category][]" value="game"> Game &amp; Interactive experience</label></li>
              <li><label><input type="checkbox" name="heritagenew[category][]" value="video"> Film &amp; Video</label></li>
            </ul>

            </div>

          </div>
        </div>

        {{! end new }}

      </div>

      <div class="taglist section">
        <div>

          <span class="item-tags">
            <svg class="icon icon-bookmark">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-bookmark"></use>
            </svg>
            <label for="heritagenew_clienttags">Tags</label>
          </span>


          <input type="text" id="heritagenew_clienttags" name="heritagenew[clienttags]" class="js-tagsinput">

        </div>
      </div>


      <div class="section">
          <label for="heritagenew_description" class="required">A description of the project (2000 words max)</label>

          <textarea id="heritagenew_description" name="heritagenew[description]" required="required" placeholder="(2000 words max)" rows="10"></textarea>
      </div>


      <div class="extra-media section">
        <h3>Extra media</h3>
        <ul class="gallery_4">
          <li class="upload-image">
              <label for="heritageedit_new_image">Add image</label>
              <input type="file" id="heritageedit_new_image" name="heritageedit[new_image]">
          </li>
        </ul>
      </div>

    </div>


  </div>
  {{! END l-content }}


  <div class="l-sidebar">
  <div class="inner js-sticky cf">

    <div class="submit-buttons">
      <div class="group1">
        <button class="save draft">
        <svg class="icon icon-check">
          <use xlink:href="#icon-check"></use>
        </svg>
        Save Draft</button>
        <a class="button cancel">Cancel</a>
      </div>

      <div class="group2">
        <button class="submit">Proceed to Payment</button>
      </div>
    </div>

    <div class="section">
      <a href="{{ url }}">Preview</a>
    </div>

    <div class="section">
      <h4>Entry status</h4>

        <span class="submission-status btn pill pending">Pending approval</span>

        <span class="submission-status btn pill approved">
            <svg class="icon icon-check">
              <use xlink:href="#icon-check"></use>
            </svg>
            Approved
        </span>

        <span class="submission-status btn pill rejected">
            <svg class="icon icon-delete">
              <use xlink:href="#icon-delete"></use>
            </svg>
            Rejected
        </span>

    </div>

    <div class="section">
      <h4>Payment status</h4>

        <button class="submission-status btn pill action">Payment needed</button>

        <span class="submission-status btn pill approved">
            <svg class="icon icon-check">
              <use xlink:href="#icon-check"></use>
            </svg>
            Paid
        </span>
    </div>


  </div>
  </div>
  {{! end sidebar }}

</div>
</main>
<!-- End Main -->


