        <a href="#" class="editable" data-name="email" data-type="text" data-pk="1" data-title="Enter your email">aaron@testuser.com</a>
      </div>
    </div>


    <div class="section social-logins cf">
      <h4>Your account is connected with:</h4>

      <a class="icon-social" data-connected="true" href="#" title="Facebook">
        <svg class="icon icon-facebook">
          <use xlink:href="#icon-facebook"></use>
        </svg>
      </a>

      <a class="icon-social" href="#" title="Twitter">
        <svg class="icon icon-twitter">
          <use xlink:href="#icon-twitter"></use>
        </svg>
      </a>

      <a class="icon-social" href="#">
        <svg class="icon icon-googleplus">
          <use xlink:href="#icon-googleplus"></use>
        </svg>
      </a>

      <a class="icon-social" href="#">
        <svg class="icon icon-linkedin">
          <use xlink:href="#icon-linkedin"></use>
        </svg>
      </a>

    </div>

    <div class="account-payments">
      <h4>Pending Payments</h4>
      {{> molecules/components/cart-mini }}
    </div>

  </div>
  {{! end sidebar }}

</div>
</main>
