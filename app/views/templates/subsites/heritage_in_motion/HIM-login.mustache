{{> atoms/iconography/svgicons-search }}

{{> organisms/global/header_v2}}



<main role="main" class="l-page no-sidebar">
<div class="lc">

  <section class="page_intro">
    <h1>Be part of the Heritage in Motion competition NOW!</h1>
    <p>Create an account, Submit your work, Compete and connect with other culture challengers</p>
  </section>

  <section class="login-register section">
  <div class="inner">

    <form class="form-login" action="login url">
      <p>See, edit or complete your submission</p>
      <h2>Log in here</h2>

      <input class="icon-bg icon-user" id="username" type="text" placeholder="Username" />
      <input class="icon-bg icon-password" id="password" type="password" placeholder="Password" />

      <div class="form-controls cf">

        <div class="l-keepmeloggedin">
          <input type="checkbox" id="keepmeloggedin" checked class="left">
          <label for="keepmeloggedin">Keep me logged in</label>
        </div>

        <div class="l-submitcol">
          <button type="submit" class="btn btn-light pill">Log In &raquo;</button>
        </div>
      </div>

      <a href="TODO: forgot password url here" class="form-forgotpass">Forgot your password?</a>

    </form>

    <form class="form-register" action="register url">
      <p>Don't have an account?</p>
      <h2>Register now</h2>

      <input class="icon-bg icon-user" id="username" type="text" placeholder="Username" />
      <input class="icon-bg icon-password" id="password" type="password" placeholder="Password" />
      <input class="icon-bg icon-password" id="password_confirm" type="password" placeholder="Confirm Password" />

      <div class="form-controls cf">

        <div class="l-submitcol">
          <button type="submit" class="btn btn-light pill">Register &raquo;</button>
        </div>
      </div>

    </form>
    </div>
  </section>



</div>
</main>
<!-- End Main -->


