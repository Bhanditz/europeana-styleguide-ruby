{{> atoms/iconography/svgicons-search }}
{{> atoms/iconography/svgicons-user }}

{{> organisms/global/header_v2}}



<main role="main" class="l-page">

<div class="page_header">
  <div class="lc">

    <div class="dashboard-title">
      <h1 class="project-title">{{ content.stats_source }}</h1>
      <h2 class="graph-title">{{ content.charts.main_chart.title }}</h2>
    </div>

    {{! Main line chart }}
    {{# content.charts.main_chart }}
    <div class="big-graph prototype-image">
      {{> molecules/charts/pykchart }}
    </div>
    {{/ content.charts.main_chart }}

  </div>
</div>


{{# content.stats_bar }}
{{> organisms/sections/stats-bar }}
{{/ content.stats_bar }}


<div class="lc">
  <div class="l-content">
    <div class="maincontent">

{{# content.numberedlist }}
    <div class="section top25">

      <div class="section-header cf">
        <h4 class="section-title">{{ title }}</h4>

        <div class="results-filter">

          <span class="madlib h4">Show results for</span>

          <span class="madlib">
            <select id="filter-month-select">
              <option value="">Full year</option>
              <option value="" disabled="disabled">- - - - - - - -</option>
              <option value="January">January</option>
              <option value="February">February</option>
              <option value="March">March</option>
              <option value="April">April</option>
              <option value="May">May</option>
              <option value="June">June</option>
              <option value="July">July</option>
              <option value="August">August</option>
              <option value="September">September</option>
              <option value="October">October</option>
              <option value="November">November</option>
              <option value="December">December</option>
            </select>
          </span>

          <span class="madlib h4">of</span>

          <span class="madlib">
            <select id="filter-year-select">
              <option value="2014">2014</option>
              <option value="2015" selected="">2015</option>
              <option value="2016">2016</option>
            </select>
          </span>
        </div>
      </div>

      <ol class="results-list numbered numberstyle1 cf is-shortened js-showmore-panel">
        {{#items}}
        <li>{{> molecules-listitem-simple }}</li>
        {{/items}}
      </ol>

      <a class="show-all h4 js-showmore" href="#" data-text-swap="▲ Show less">
        ▼ Show all
      </a>

    </div>
{{/ content.numberedlist }}


{{# content.charts.topcountries }}
    <div class="section chart-map">
      {{> molecules/charts/pykchart }}
    </div>
{{/ content.charts.topcountries }}

    </div>
  </div>
  {{! END l-content }}


  <div class="l-sidebar sidebar cf">


  {{> molecules/charts/display-number(title: "Total Countries", value:"39") }}

  {{> molecules/charts/display-number(title: "Total Countries", value:"39") }}

  {{> molecules/charts/display-number(title: "Total Countries", value:"39") }}

  {{# content.charts.item_distribution }}
    {{> molecules/charts/pykchart }}
  {{/ content.charts.item_distribution }}

  </div>
  {{! end sidebar }}

</div>
</main>
<!-- End Main -->


{{> organisms/global/footer }}

