{{> atoms/iconography/svgicons-search }}

{{> organisms/global/header_v2}}

{{#content}}
  <div role="main" class="page l-page">

    <section>
      <div class="object-nav cf">
        <div class="object-nav-lists">
          <ul class="breadcrumbs">
            <li><a href="{{navigation.home_url}}"><span class="svg-icon-home"></span>{{i18n.site.navigation.breadcrumb.return_home}}</a></li>
            <li><span class="lastitem"><strong>{{i18n.global.galleries}}</strong></span></li>
          </ul>
        </div>
      </div>
    </section>

    <section class="site-hero galleries" id="maincontent" style="background-image:url('{{content.hero.url}}');">
      <div class="hero-text">
        <h1>{{content.hero.title}}</h1>
        <br/>
        <h3>{{i18n.site.galleries.description}}</h3>
      </div>
    </section>

    <section class="lc">
      <div class="gallery-header">
        {{#gallery_filter_options}}
          {{>molecules/forms/filterby}}
        {{/gallery_filter_options}}
        {{#social}}
          <h4>{{social_title}}</h4>
          {{>molecules/controls/share-social}}
        {{/social}}
      </div>
    </section>

    <section class="lc">
      <div class="masonry-items gallery-foyer">
        <div class="grid-sizer"></div>
        <div class="gutter-sizer"></div>
        {{#galleries}}
          {{> molecules/components/image-set }}
        {{/galleries}}
      </div>
    </section>

    <section>
      {{> molecules/navigation/pagination }}
    </section>

  </div>
{{/content}}


