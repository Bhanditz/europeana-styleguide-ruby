                {{^icon_first}}
                    {{tooltip_text}}
                {{/icon_first}}{{#icon}}
                <svg class="icon {{.}}">
                    <use xlink:href="#{{.}}"></use>
                </svg>{{/icon}}{{#icon_first}}{{tooltipped_text}}{{/icon_first}}
            </a>
        {{/tooltip_text}}
        <div {{#tooltip_id}}data-tooltip-id="{{.}}"{{/tooltip_id}}
             class="eu-tooltip{{#persistent}} persistent{{/persistent}}{{^icon_first}}{{^trailing}} right-aligned{{/trailing}}{{/icon_first}}{{#trailing}} trailing{{/trailing}}">
            {{#link_url}}
                <a href="{{.}}">{{tooltip_text}}</a>
            {{/link_url}}
            {{^link_url}}
                {{tooltip_text}}
            {{/link_url}}
            {{#persistent}}
                <a data-role="remove"></a>
            {{/persistent}}
        </div>
    </div>
{{/tooltip}}
