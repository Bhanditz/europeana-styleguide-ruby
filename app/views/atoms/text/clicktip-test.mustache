<style type="text/css">

.eu-clicktip-container{
  display:  inline-block;
  opacity: 0;
    -webkit-transition: opacity 0.4s ease-in;
   -moz-transition: opacity 0.4s ease-in;
    -ms-transition: opacity 0.4s ease-in;
     -o-transition: opacity 0.4s ease-in;
        transition: opacity 0.4s ease-in;

  position: relative;
}

.eu-clicktip-container.showing{
  opacity: 1;
}

.eu-clicktip-container:hover,
.eu-clicktip-container:focus {
  cursor: default;
}

.eu-clicktip-container:hover .eu-clicktip,
.eu-clicktip-container:focus .eu-clicktip {
  display: block;
}

.eu-clicktip-container .eu-clicktip {

  background:     #1676AA;
  background:     #e7e7e7;

  color:          #777;

  font-size:      0.75rem;
  font-weight:    normal;
  line-height:    1.6;

  min-width:      12em;

  padding:        0.6em;
  position:       absolute;
  text-transform: none;
  z-index:        1;
}

.eu-clicktip-container .eu-clicktip.top {
  box-shadow:     0.3em 0.3em 0.7em 0 rgba(0, 0, 0, 0.5);
  top:            1em;
}

.eu-clicktip-container .eu-clicktip.bottom {
  bottom:        100%;
  box-shadow:    0.3em -0.3em 0.7em 0 rgba(0, 0, 0, 0.3);
  margin-bottom: 2em;
}

.eu-clicktip-container .eu-clicktip.right {
  bottom:         50%;
  box-shadow:     -0.4em 0.3em 0.7em 0 rgba(0, 0, 0, 0.5);
  float:          none;
  margin-bottom:  0.4em;
  right:          0;
  transform:      translate(-7px, 50%)
}

.eu-clicktip-container .eu-clicktip.left {
  bottom:         50%;
  box-shadow:     0.3em 0.3em 0.7em 0 rgba(0, 0, 0, 0.5);
  float:          none;
  margin-bottom:  0.4em;
  transform:      translate(7px, 50%)
}

.eu-clicktip-container .eu-clicktip a{
  color: #777;
  text-decoration: underline;
}

.eu-clicktip-container .eu-clicktip a[href]{
  border-bottom: 1px dotted #fff;
}

.eu-clicktip-container .eu-clicktip a[href]:hover{
  border-bottom: 1px solid #fff;
}

.eu-clicktip-container .eu-clicktip a[data-role="remove"] {
  cursor:        pointer;
  color:         #4d4d4d;
  color:         #777;
  line-height:   1em;
  position:      absolute;
  top:           0px;
  right:         2px;

  width:  1em;
  height: 1em;
}

.eu-clicktip-container .eu-clicktip a[data-role="remove"]:hover{
  color: #777;
}

.eu-clicktip-container .eu-clicktip a[data-role="remove"]:after {
  content: "âœ•";
}

.eu-clicktip-container .eu-clicktip:after {
    border:       solid transparent;
    border-width: 8px;
    content:      " ";
    position:     absolute;
}

.eu-clicktip-container .eu-clicktip.top:after {
  bottom:              100%;
  left:                5%;
  border-bottom-color: #1676AA;
  border-bottom-color: #e7e7e7;
}

.eu-clicktip-container .eu-clicktip.right:after {
  top:                50%;
  right:              -15px;
  transform:          translateY(-50%);
  border-left-color: #1676AA;
  border-left-color: #e7e7e7;
}

.eu-clicktip-container .eu-clicktip.left:after {
  top:                50%;
  left:               -15px;
  transform:          translateY(-50%);
  border-right-color: #1676AA;
  border-right-color: #e7e7e7;
}

.eu-clicktip-container .eu-clicktip.bottom:after {
  bottom:           -15px;
  left:             5%;
  border-top-color: #1676AA;
  border-top-color: #e7e7e7;
}



</style>

