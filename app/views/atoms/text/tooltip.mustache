{{#tooltip}}
  <div class="tooltip-container">
    <a {{#link_class}}class="tooltip-anchor {{.}}"{{/link_class}}{{^link_class}} class="tooltip-anchor" {{/link_class}}{{#link_url}}href="{{.}}" {{/link_url}}{{#tooltip_id}}data-tooltip-id="{{.}}"{{/tooltip_id}}>
      {{^icon_first}}
        {{tooltipped_text}}
      {{/icon_first}}{{#icon}}
      <svg class="icon {{.}}">
        <use xlink:href="#{{.}}"></use>
      </svg>{{/icon}}{{#icon_first}}{{tooltipped_text}}{{/icon_first}}
    </a>
    <div class="tooltip{{#persistent}} persistent{{/persistent}}{{^icon_first}}{{^trailing}} right-aligned{{/trailing}}{{/icon_first}}{{#trailing}} trailing{{/trailing}}">
      {{tooltip_text}}
      {{#persistent}}
        <a data-role="remove"></a>
      {{/persistent}}
    </div>
  </div>
{{/tooltip}}
