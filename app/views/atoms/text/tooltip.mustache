{{#tooltip}}
  {{#persistent}}
    <script>
      // Inline script expects jquery
      function closeTooltip(el){
        $(el).parent().hide();
      }
     function openTooltip(el){
         $(el).next('.tooltip').show();
      }
    </script>
  {{/persistent}}

  <div class="tooltip-container">
    <a onclick="openTooltip(this)" {{#link_class}}class="{{.}}"{{/link_class}} {{#link_url}}href="{{.}}" target="_new"{{/link_url}}>
      {{^icon_first}}
        {{tooltipped_text}}
      {{/icon_first}}{{#icon}}
      <svg class="icon {{.}}">
        <use xlink:href="#{{.}}"></use>
      </svg>{{/icon}}{{#icon_first}}{{tooltipped_text}}{{/icon_first}}
    </a>
    <div class="tooltip{{#persistent}} persistent{{/persistent}}{{^icon_first}}{{^trailing}} right-aligned{{/trailing}}{{/icon_first}}{{#trailing}} trailing{{/trailing}}">
      {{tooltip_text}}
      {{#persistent}}
        <a data-role="remove" onclick="closeTooltip(this)"></a>
      {{/persistent}}
    </div>
  </div>
{{/tooltip}}
