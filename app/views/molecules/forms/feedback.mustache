{{#feedback}}
  <div id="feedback">
    <div class="feedback-toggle">
      <a class="open visible">{{ i18n.global.feedback.open }}</a>
      <a class="close">{{ i18n.global.feedback.close }} <svg class="icon icon-next"><use xlink:href="#icon-next"/></svg></a>
    </div>
    <form id="feedback-form" method="post" action="{{form_action}}">
    
        <input type="hidden" name="pageurl" class="pageurl">
        
        <h2 id="feedback-title">
          <span class="step1">{{ i18n.global.feedback.title }}</span>
          <span class="step2" style="display: none;">{{ i18n.global.feedback.thanks.short }}</span>
        </h2>
        <ul class="step1">
          <li>
            <input type="radio" checked="checked" name="type" value="comment" id="feedback-1">
            <label for="feedback-1">{{ i18n.global.feedback.type.comment }}</label>
          </li>
          <li>
            <input type="radio" name="type" value="correction" id="feedback-2">
            <label for="feedback-2">{{ i18n.global.feedback.type.correction }}</label>
          </li>
          <li>
            <input type="radio" name="type" value="bug" id="feedback-3">
            <label for="feedback-3">{{ i18n.global.feedback.type.bug }}</label>
          </li>
        </ul>
  
        <textarea class="step1 feedback-text" maxlength="{{maxlength}}" placeholder="{{ i18n.global.feedback.placeholder }}" name="feedback_text"></textarea>
        <div class="step1 feedback-counter" data-maxlength="{{maxlength}}">{{maxlength}}</div>
        <div class="controls step1">
          <a class="feedback-send">{{ i18n.global.feedback.submit }}</a>
        </div>
  
        <div class="feedback-spinner" aria-role="progressbar">
        </div>  
  
        <p class="step2" id="feedback-thanks" style="display: none;">{{ i18n.global.feedback.thanks.long }}</p>
    </form>
  </div>
{{/feedback}}