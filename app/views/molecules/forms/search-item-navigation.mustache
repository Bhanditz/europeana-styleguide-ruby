<div class="object-nav-search item-nav-search">
  <div class="content">
    {{#form_search.autocomplete}}
      <script id="js-template-autocomplete" type="text/x-mustache">{{> atoms/lists/eu-autocomplete-item-template-entity }}</script>
    {{/form_search.autocomplete}}
    <form
      {{^form_search.autocomplete}}
        class="search-multiterm"
      {{/form_search.autocomplete}}
      {{#form_search.autocomplete}}
        class="search-multiterm scroll-trigger"
        data-enabled="true"
        data-fire-on-open="addAutocomplete"
        data-fire-on-open-params='{
         "min_chars": "{{min_chars}}",
         "url": "{{url}}",
         "extended_info": "{{extended_info}}"
        }'
      {{/form_search.autocomplete}}
      action="{{form_search.action}}">
      <div class="item-nav-input js-hitarea">
        <input class="item-search-input" type="text" title="Search" placeholder="{{i18n.site.navigation.search.placeholder.text}}" name="q">
      </div>
      <button type="submit" class="item-nav-submit">
       <svg class="icon icon-search">
           <use xlink:href="#icon-search"></use>
        </svg>
        <span class="is-vishidden">{{i18n.global.search-area.search-button-image-alt}}</span>
      </button>
    </form>
  </div>
  <button class="item-nav-show">
    <svg class="icon icon-search">
      <use xlink:href="#icon-search"></use>
    </svg>
  </button>
</div>