{{#show_bars}}
  <div class="sparkline">
    <div class="sparkline-data{{#show_borders}} borders{{/show_borders}}">
        {{#data}}
        <a class="index" {{#url}}href="{{.}}"{{/url}} title="{{value}}"><span class="count" style="height: {{percent_of_max}}%;">{{value}}</span> </a>
        {{/data}}
    </div>

    <div class="sparkline-range">
      <span class="sparkline-start">{{date_start}}</span>
      <span class="sparkline-middle">{{date_middle}}</span>
      <span class="sparkline-end">{{date_end}}</span>
    </div>
  </div>
{{/show_bars}}