<div class="linklist l-linklist {{ styleModifier }}">
<div class="inner">
	{{# title }}
    <h4 class="title">{{ title }}</h4>
	{{/ title }}
	{{^ title }}
    <div class="title">&nbsp;</div>
	{{/ title }}

    <ul>
    {{# items}}
    	<li class="cf">
        <a href="{{url}}" class="item-line">
            {{#text}}<div class="link-text">{{text}}</div> {{/text}}
            {{#number}}<span class="link-number">{{number}}</span>{{/number}}
            {{#date}}<span class="link-date">{{date}}</span>{{/date}}
        </a>
        </li>
    {{/ items}}
	</ul>
</div>
</div>