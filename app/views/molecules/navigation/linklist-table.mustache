<div class="linklist l-linklist {{ styleModifier }}">
  <div class="inner">
    {{# title }}
      <h4 class="title">{{ title }}</h4>
    {{/ title }}
    {{^ title }}
      <h4 class="title">Links</h4>
    {{/ title }}

    <table class="table-responsive-break" >
    <thead>
      <tr>
        <th scope="col">{{ tableh1 }}</th>
        <th scope="col">{{ tableh2 }}</th>
        <th scope="col">{{ tableh3 }}</th>
      </tr>
    </thead>
    {{# items}}
    <tbody>
      <tr>
        <th scope="row">
          <a href="{{url}}">{{#text}}<span class="link-text">{{text}}</span>{{/text}}</a>
        </th>
        <td data-title="{{ tableh2 }}">
          <a href="{{url}}">{{#number}}<span class="link-number">{{number}}</span>{{/number}}</a>
        </td>
        <td data-title="{{ tableh3 }}">
          <a href="{{url}}">{{#date}}<span class="link-date">{{date}}</span>{{/date}}</a>
        </td>
      </tr>
    </tbody>
    {{/ items}}
  </table>

  </div>
</div>
