      {{#texts.0}}<p>{{#url}}<a href="{{.}}">{{/url}}{{.}}{{#url}}</a>{{/url}}</p>{{/texts.0}}
      {{#texts.1}}<p>{{.}}</p>{{/texts.1}}
    </div>
  {{/has_text}}
</div>
