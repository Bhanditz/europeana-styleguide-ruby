<div class="promo-block promo-block-image {{#is_channel}}item-channel {{/is_channel}}{{#is_exhibition}}item-exhibition {{/is_exhibition}}{{#is_new}}item-new {{/is_new}}{{#is_partner}}item-partner {{/is_partner}}{{#is_featured_site}}item-featuredsite {{/is_featured_site}} {{class_custom}} contrast" {{#bg_image}}style="background-image: url({{bg_image}}); "{{/bg_image}}>
  <a href="{{url}}" {{#is_external}}target="_new"{{/is_external}}>
    {{#comingsoon}}
    <div class="corner-ribbon alternate">Coming Soon</div>
    {{/comingsoon}}
    <div class="inner">
      <span class="title">{{title}}{{^subtitle}}{{#is_external}} <svg class="icon icon-linkout"><use xlink:href="#icon-linkout"/></svg>{{/is_external}}{{/subtitle}}</span>
      {{#subtitle}}
        <span class="subtitle">{{subtitle}}{{#is_external}} <svg class="icon icon-linkout"><use xlink:href="#icon-linkout"/></svg>{{/is_external}}</span>
      {{/subtitle}}
    </div>
  </a>
  {{#category_label}}
    <div class="category-flag">{{.}}</div>
  {{/category_label}}
</div>
