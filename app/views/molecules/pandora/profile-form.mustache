<form action="register" method="post" role="form" class="metis-profile-form">
	<fieldset>
		<legend  class="profile-form-header">Your Profile</legend>
		<div class="error_missing error-message">Error: a new password and the confirmed password are not the same</div>
		<div class="error_nonequal error-message">Error: an old password is missing</div>
		<div class="field-container">
			<label for="fullName">First Name*:</label>
			<input id="fullName" type='text' name='fullName' {{#fullName}}value="{{.}}"{{/fullName}}/>
		</div>
		<div class="field-container">
			<label for="lastName">Last Name*:</label>
			<input id="lastName" type='text' name='lastName' {{#lastName}}value="{{.}}"{{/lastName}}/>
		</div>
		<div class="field-container">
			<label for="email">Email*:</label>
			<input id="email" type='email' name='email' {{#email}}value="{{.}}"{{/email}}/>
		</div>
		<div class="field-container">
			<label for="skype">Skype:</label>
			<input id="skype" type='text' name='skype' placeholder="Type your skype account"/>
		</div>
		<div class="field-container">
			<label for="country">Country:</label>
			<input id="country" type='text' name='skype' placeholder="Choose your country"/>
		</div>
		<div class="field-container">
			<label><input type="checkbox" id="network_member_checkbox" value="network_member_checkbox"> I am a member of Europeana Network Association</label>
		</div>
		<div class="field-container">
			<a class="user-profile-update-password">Change Password >></a>
		</div>
		<div class="field-container user-profile-password">
			<label for="password">Old Password:</label>
			<input id="password" type='password' name='password' placeholder="Old password"/>
		</div>		
		<div class="field-container user-profile-password">
			<label for="password">New Password:</label>
			<input id="password_new" type='password' name='password' placeholder="New password"/>
		</div>		
		<div class="field-container user-profile-password">
			<label for="password">Confirm Password:</label>
			<input id="password_new2" type='password' name='password' placeholder="New password"/>
		</div>
		<div class="field-container">
			<button type="submit">Update</button>
		</div>
		<div class="field-container">
			<button type="button">Back to Home</button>
		</div>
	</fieldset>
</form>