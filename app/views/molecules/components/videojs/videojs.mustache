[[# audio ]]
<audio class="audio-js vjs-default-skin[[#is_current]] is-current[[/is_current]]" width="100%" preload="none" controls="true">
  <p class="no-js">[[ i18n.global.requires_javascript ]]</p>
</audio>
[[/ audio ]]
[[# video ]]
<video class="video-js vjs-default-skin[[#is_current]] is-current[[/is_current]]" width="auto" height="auto" preload="none" controls="true">
  <p class="no-js">[[ i18n.global.requires_javascript ]]</p>
</video>
[[/ video ]]

