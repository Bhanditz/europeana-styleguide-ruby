<article class="suggestion-item">
  <div class="item-preview">
    <div class="item-image">
      <div class="inner">
        <a target="[[target]]" href="[[url]]" tabindex="-1">
          <div class="mlt-img-div height-to-width" [[#img.src]]style="background-image:url('[[.]]');"[[/img.src]]></div>
        </a>
      </div>
    </div>
  </div>

  <div class="item-info">
    {{! no whitespace here - eu-ellipsis js to be applied }}
    <h2><a href="[[url]]" [[#target]]target="[[.]]"[[/target]]>[[#title]]<span class="link-text">[[.]]</span>[[#external]]<span title="[[title]]" class="svg-icon-external-eu-blue"></span>[[/external]][[/title]]</a></h2>
  </div>
</article>
