<article class="search-list-item cf {{^ img.src }}missing-image{{/ img.src }}">

  <div class="item-preview">
    <div class="item-image">

    {{# img.src }}
      <a href="{{object_url}}"{{#link_attrs}} {{name}}="{{value}}"{{/link_attrs}}><img src="{{ img.src }}" alt="{{ img.alt }}" /></a>
    {{/ img.src }}

    {{^ img.src }}
      <a class="show-with-grid" href="{{object_url}}"{{#link_attrs}} {{name}}="{{value}}"{{/link_attrs}}>{{text.medium}}</a>
    {{/ img.src }}

    </div>
  </div>


  <div class="item-info {{^ img.src }}hide-with-grid{{/ img.src }}">

    <h1><a href="{{object_url}}"{{#link_attrs}} {{name}}="{{value}}"{{/link_attrs}}>{{ title }} {{#year.long}}<span class="date">({{ year.long }})</span>{{/year.long}}{{#agent}} | {{ agent }}{{/agent}}&nbsp;&nbsp;</a>&nbsp;&nbsp;</h1>

    {{#text}}
    <p class="excerpt">
       {{text.medium}}
    </p>
    {{/text}}

    {{#concepts}}
    <ul class="item-concepts comma-list">
      {{#items}}
      <li>{{text}}</li>
      {{/items}}
    </ul>
    {{/concepts}}

    {{#origin}}
      {{#url}}
      <div class="item-origin">
      <a href="{{origin.url}}" class="external" target="_blank">{{ i18n.site.results.list.view-at-provider }} {{origin.text}}</a>
      </div>
      {{/url}}
    {{/origin}}

    <footer>
      <div class="item-metadata">

      {{# item_type }}
            <span data-href="{{url}} " class="highlight item-type">
          {{# is_image }}
          <svg class="icon icon-image">
            <use xlink:href="#icon-image"></use>
          </svg>
          {{/ is_image }}
          {{# is_audio }}
          <svg class="icon icon-music">
            <use xlink:href="#icon-music"></use>
          </svg>
          {{/ is_audio }}
          {{# is_text }}
          <svg class="icon icon-book">
            <use xlink:href="#icon-book"></use>
          </svg>
          {{/ is_text }}
          {{# is_video }}
          <svg class="icon icon-tv">
            <use xlink:href="#icon-tv"></use>
          </svg>
          {{/ is_video }}

          {{item_type.name}}
            </span>
      {{/ item_type }}


      {{# channels.disabled }}
        <span class="item-themes">
          {{i18n.site.results.list.in-channel}}:
          {{# items }}
          <a href="{{url}}" class="highlight">{{text}}</a>,
          {{/ items }}
        </span>
      {{/ channels.disabled }}
      </div>

      {{# menus.actions_disabled }}
      <div class="item-actions">

        <a href="path/to/save" class="action-save">
          <svg class="icon icon-star">
            <use xlink:href="#icon-star"></use>
          </svg>{{i18n.site.results.actions.product-save}}
        </a>

        <div class="action-select">
          <input type="checkbox" name="selected[]" id="itemx">
        </div>
      </div>
      {{/ menus.actions_disabled }}

    </footer>
  </div>
  <div class="item-agent-data show-with-grid">
      <div class="item-agent">{{#agent}}{{.}}{{/agent}}{{^agent}}<br/>{{/agent}}</div>
  </div>
</article>