<div
  {{^ single_item}}
    class="mlt-img-div height-to-width{{#new_design}} loading{{/new_design}}"
    {{#new_design}}
      data-image="{{thumbnail}}"
    {{/new_design}}
    {{^new_design}}
      style="background-image: url({{thumbnail}})"
    {{/new_design}}
  {{/single_item}}>
  <div class="inner"><a {{#external_media}}href="{{.}}" target="_blank"{{/external_media}}
      {{#is_audio}}
          data-type="audio"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.audio}}"
      {{/is_audio}}

      {{#is_iiif}}
          data-type="iiif"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.IIIF}}"
      {{/is_iiif}}

      {{#is_image}}
          data-type="image"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.image}}"
      {{/is_image}}

      {{#is_pdf}}
          data-type="pdf"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.pdf}}"
      {{/is_pdf}}

      {{#is_oembed}}
          data-type="oembed"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.oembed}}"
      {{/is_oembed}}

      {{#is_text}}
          data-type="text"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.text}}"
      {{/is_text}}

      {{#is_video}}
          data-type="video"
          aria-label="{{i18n.site.object.actions.open-media}} {{i18n.global.media.types.video}}"
      {{/is_video}}

      {{#play_html}}
         data-html="{{.}}"
      {{/play_html}}

      {{#play_url}}
         data-uri="{{.}}"
      {{/play_url}}

      {{#thumbnail}}
         data-thumbnail="{{.}}"
      {{/thumbnail}}

      {{#downloadable}}
        {{#download}}
          data-download-uri="{{url}}"
        {{/download}}
      {{/downloadable}}

      {{#technical_metadata}}
        {{#codec}}
          data-codec="{{.}}"
        {{/codec}}
        {{#dc_creator}}
          data-dc-creator="{{.}}"
        {{/dc_creator}}
        {{#dc_description}}
          data-dc-description="{{.}}"
        {{/dc_description}}
        {{#dc_source}}
          data-dc-source="{{.}}"
        {{/dc_source}}
        {{#dc_rights}}
          data-dc-rights="{{.}}"
        {{/dc_rights}}
        {{#edm_rights}}
          data-edm-rights="{{.}}"
        {{/edm_rights}}
        {{#file_size}}
          data-file-size="{{.}}"
        {{/file_size}}
        {{#file_unit}}
          data-file-unit="{{.}}"
        {{/file_unit}}
        {{#format}}
          data-format="{{.}}"
        {{/format}}
        {{#height}}
          data-height="{{.}}"
        {{/height}}
        {{#language}}
          data-language="{{.}}"
        {{/language}}
        {{#mime_type}}
          data-mime-type="{{.}}"
        {{/mime_type}}
        {{#runtime}}
          data-runtime="{{.}}"
        {{/runtime}}
        {{#runtime_unit}}
          data-runtime-unit="{{.}}"
        {{/runtime_unit}}
        {{#size_unit}}
          data-size-unit="{{.}}"
        {{/size_unit}}
        {{#width}}
          data-width="{{.}}"
        {{/width}}
        {{#attribution_plain}}
          data-attribution-plain="{{.}}"
        {{/attribution_plain}}
        {{#attribution_html}}
          data-attribution-html="{{.}}"
        {{/attribution_html}}

        {{#colours.present}}
          data-has-colour-info=true
          data-colour-hexes="{{#colours.items}}{{hex}}|{{/colours.items}}"
          data-colour-urls="{{#colours.items}}{{url}}|{{/colours.items}}"
        {{/colours.present}}

      {{/technical_metadata}}

      class="link {{#is_current}}is-current{{/is_current}}{{#playable}} playable{{/playable}}{{#external_media}} external-media{{/external_media}}"

      >{{#single_item}}{{>molecules/components/thumb-icon}}{{/single_item}}</a>
  </div>
</div>
