  <div id="template-promo-card">
    [[#is_next]]
      <span class="next-item-title">
        {{ i18n.site.object.next-item }}
      </span>
    [[/is_next]]
    [[#is_prev]]
      <hr/>
      <span class="previous-item-title">
        {{ i18n.site.object.previous-item }}
      </span>
    [[/is_prev]]

    [[#is_entity]]
      [[#images]]
        <div class="gridlayout-card gridlayout-card-entity" style="background-image: url('[[.]]');">
          <div class="card-image">
              [[#url]]<a href="[[.]]"></a>[[/url]]
          </div>
      [[/images]]
    [[/is_entity]]

    [[^is_entity]]
      <div class="gridlayout-card">
        [[#image]]
          [[#description]]
            [[#logo_url]]
            <div class="card-image">
              {{> organisms/virtual-exhibitions/foyer-card-js}}
            </div>
            [[/logo_url]]
          [[/description]]
        [[/image]]

        [[#is_gallery]]
          <div class="card-image card-image-set image-set">
            [[#images]]
              <a href="[[url]]">
                <img src="[[.]]"/>
              </a>
            [[/images]]
          </div>
        [[/is_gallery]]

        [[#card_bg_image]]
          [[#images]]
            <div class="card-image" style="background-image: url('[[.]]');">
              [[#url]]<a href="[[.]]"></a>[[/url]]
            </div>
          [[/images]]
        [[/card_bg_image]]
    [[/is_entity]]
      <div class="card-content">
        [[#type]]<h4>[[.]]</h4>[[/type]]
        [[#title]]
          <h3>
            <a href="[[url]]">[[.]]</a>
              [[#media_type]]
                <span class="icon media-type-[[.]]"></span>
              [[/media_type]]
          </h3>
        [[/title]]
        [[#description]]
          <div class="description">

            [[^is_gallery]]
              [[^is_exhibition]]
                <div class="excerpt">[[[.]]]</div>
              [[/is_exhibition]]
            [[/is_gallery]]

            [[#is_entity]]
              <p>[[[description]]]</p>
              <span class="extras">
                <a href="[[url]]">[[more_link_text]]</a>
              </span>
            [[/is_entity]]

            [[#is_gallery]]
              [[#count_label]]
                <p>[[.]]</p>
              [[/count_label]]
              <span class="icon icon-info"></span>
              <div class="info image-set-overlay">[[[description]]]</div>
            [[/is_gallery]]

            [[#media_type]]
              <span class="icon media-type-[[.]]"></span>
            [[/media_type]]
          </div>
        [[/description]]

        <p class="extras">[[#is_entity]]<a href="[[url]]">[[text]]</a>[[/is_entity]]</p>
        <p class="extras">[[#date]]<span>[[.]]</span>[[/date]][[#attribution]]<span>[[.]]</span>[[/attribution]]</p>
        [[#tags]]
          <ul class="card-tags">
            [[#items]]
              <li>
                [[#url]]<a class="promo-tag-link" href="[[.]]">[[/url]]#[[text]][[#url]]</a>[[/url]]
              </li>
            [[/items]]
          </ul>
        [[/tags]]
      </div>
      [[#relation]]<div class="card-footer">[[.]]</div>[[/relation]]
    </div>
  </div>

[[#is_next]]
<hr/>
[[/is_next]]
