<article class="suggestion-item">
  <div class="item-preview">
    <div class="item-image">
      <div class="inner">
        <a target="[[target]]" href="[[url]]" tabindex="-1" onmousedown="event.preventDefault ? event.preventDefault() : event.returnValue = false">
          <div class="mlt-img-div height-to-width loading" [[#img.src]]data-image="[[.]]"[[/img.src]]></div>
        </a>
      </div>
    </div>
  </div>
  <div class="item-info">
    {{! no whitespace here - eu-ellipsis js to be applied }}
    <h2><a class="link-black-blue" [[#url]]href="[[.]]"[[/url]] [[#target]]target="[[.]]"[[/target]]>[[#title]]<span class="link-text">[[.]]</span>[[#external]]<span title="[[title]]" class="svg-icon-external"></span>[[/external]][[/title]]</a></h2>
  </div>
</article>
